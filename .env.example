# Application Settings
APP_NAME=Face Recognition Service
APP_VERSION=1.0.0
DEBUG=True
HOST=0.0.0.0
PORT=8000

# Database Configuration
DATABASE_URL=sqlite:///./frs_database.db
# For PostgreSQL: postgresql://user:password@localhost:5432/frs_db

# Model Paths
DETECTION_MODEL_PATH=models/detection/retinaface_resnet50.pth
EMBEDDING_MODEL_PATH=models/embeddings/adaface_ir101_webface12m.ckpt
ONNX_DETECTION_PATH=models/onnx/retinaface.onnx
ONNX_EMBEDDING_PATH=models/onnx/adaface.onnx

# Model Settings
USE_ONNX=True
DETECTION_CONFIDENCE_THRESHOLD=0.8
RECOGNITION_SIMILARITY_THRESHOLD=0.6
MIN_FACE_SIZE=40
TOP_K_MATCHES=5

# Processing Settings
MAX_IMAGE_SIZE=1920
FACE_SIZE=112
NUM_WORKERS=4
BATCH_SIZE=8

# API Security
API_KEY=your-secret-api-key-here
ENABLE_AUTH=False

# Optimization
USE_CUDA=False
ONNX_OPTIMIZATION_LEVEL=99
FAISS_USE_GPU=False

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/frs.log